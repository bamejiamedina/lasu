<h1><%= @post.title %></h1>
<p><%= @post.content %></p>

<article class="post">
	<% if @post.image_url.present? %>
	  <%= image_tag @post.image.main.url, alt: "image", class: "img-responsive" %>	
	<% else %>
	  <%= image_tag "lasu_logo.png" %>
	<% end %>
</article>

<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", @post, method: :delete, data: { confirm: "Are you sure?" } %>
