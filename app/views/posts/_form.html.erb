<%= render 'shared/error_messages' %>

<div class="row">
	<div class="col">
		<%= form_for(@post, :html => { multipart: true, class:"form-horizontal", role: "form" }) do |f| %>

    	<div class="form-group">
    		<div class="col-sm-6">
    		<%= f.collection_select(:category_id, Category.all, :id, :name, prompt: "Select Category" ) %>
    		</div>
    		<div class="control-label col-sm-2">
    			<%= f.label :title %>
    		</div>
    	</div>

    	<div class="col-sm-6">
    		<%= f.text_field :title, class: "form-control", placeholder: "Enter Post Title", autofocus: true %>
    	</div>

    	<div class="form-group">
    		<div class="control-label col-sm-2">
    			<%= f.label :content %>
    		</div>
    		<div class="col-sm-6">
    			<%= f.text_area :content, rows: 10, class: "form-control", placeholder: "Enter Post Content" %>
    		</div>
    	</div>

        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :image %>
            </div>
            <div class="col-sm-6">
                <%= f.file_field :image %>
            </div>
        </div>
    	
    	<div class="form-group">
    		<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit class: 'btn btn-primary btn-large' %>
			</div>
		</div>
	</div>
</div>
<% end %>